<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ualberta.cmput301w16t16.glamorousborrowingwhaleapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MyItemActivity" />
        <activity android:name=".SearchResultsActivity" />
        <activity android:name=".MyBorrowedItemsActivity" />
        <activity android:name=".MyBidsActivity" />
        <activity android:name=".MyProfileViewActivity" />
        <activity android:name=".TheirItemActivity" />
        <activity android:name=".MyItemsActivity" />
        <activity android:name=".NewListingActivity" />
        <activity android:name=".IncomingBidsActivity" />
        <activity android:name=".MyBorrowedItemActivity" />
        <activity android:name=".User" />
        <activity android:name=".PersistentToolbar" />
        <!-- android:name=".MyItemsIncomingBidsActivity" -->
        <!-- android:label="@string/title_activity_my_items_incoming_bids" -->
        <!-- android:theme="@style/AppTheme.NoActionBar"></activity> -->
        <activity android:name=".MakeBidActivity" />

        <receiver
            android:name=".NetworkChangeReceiver"
            android:enabled="true"
            android:label="NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ViewBorrowingOutActivity"
            android:label="@string/title_activity_view_borrowing_out"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TheirProfileViewActivity"></activity>
    </application>

</manifest>
