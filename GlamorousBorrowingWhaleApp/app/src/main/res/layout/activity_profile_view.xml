<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ualberta.cmput301w16t16.glamorousborrowingwhaleapp.ProfileViewActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:id="@+id/profileInfoLayout">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:id="@+id/profilePictureView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/name"
            android:id="@+id/profileHeadName"
            android:layout_alignTop="@+id/profilePictureView"
            android:layout_toEndOf="@+id/profilePictureView"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/profileName"
            android:layout_below="@+id/profileHeadName"
            android:layout_alignStart="@+id/profileHeadName"
            android:text="name of user"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/phone"
            android:id="@+id/profileHeadPhone"
            android:layout_below="@+id/profileName"
            android:layout_alignStart="@+id/profileHeadName"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="user phone number"
            android:id="@+id/profilePhone"
            android:layout_below="@+id/profileHeadPhone"
            android:layout_alignStart="@+id/profileHeadName"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/email"
            android:id="@+id/profileHeadEmail"
            android:layout_below="@+id/profilePhone"
            android:layout_alignStart="@+id/profileHeadName"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="user email"
            android:id="@+id/profileEmail"
            android:layout_alignStart="@+id/profileHeadName"
            android:layout_below="@+id/profileHeadEmail"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profileActionLayout">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/my_stuff"
            android:id="@+id/buttonMyStuff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/my_bids"
            android:id="@+id/buttonMyBids"
            android:layout_below="@+id/buttonMyStuff"
            android:layout_alignStart="@+id/buttonMyStuff" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/borrow"
            android:id="@+id/buttonBorrowSearch"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>
</LinearLayout>