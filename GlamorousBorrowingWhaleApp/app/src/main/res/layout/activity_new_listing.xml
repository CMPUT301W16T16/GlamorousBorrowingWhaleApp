<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ualberta.cmput301w16t16.glamorousborrowingwhaleapp.NewListingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            android:id="@+id/pictureView"
            android:src="@drawable/glamorouswhale1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Name"
            android:layout_alignTop="@+id/pictureView"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/pictureView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner"
            android:layout_below="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/pictureView"
            android:hint="Owner" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:layout_below="@+id/owner"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/owner"
            android:hint="Status" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/size"
            android:hint="Size"
            android:layout_below="@+id/status"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:id="@+id/descriptionPrompt"
            android:layout_below="@+id/size"
            android:layout_alignStart="@+id/pictureView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_alignStart="@+id/descriptionPrompt"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/descriptionPrompt"
            android:hint="Add a description. The better it is, the higher chance of a borrower wanting this thing!"
            android:layout_above="@+id/save" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/save"
            android:src="@android:drawable/ic_menu_save"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/description"
            android:layout_marginRight="10dp"
            android:background="@layout/mybutton"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/delete"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:background="@layout/mybutton"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>


</RelativeLayout>